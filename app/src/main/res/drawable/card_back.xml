<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#CCCCCC"
    android:endColor="#888888"
    android:angle="45"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#444444"/> <!-- Border color matching the gradient -->

    <!-- Corner radius -->
    <corners android:radius="8dp"/> <!-- Rounded corners -->

    <!-- Padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/> <!-- Padding inside the shape -->

</shape>
